{
  "dataset_reader": {
    "lazy": false,
    "type": "text_classification_csv",
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "bert-basic"
      }
    },
    "token_indexers": {
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": "/home/yzhao/data/bert/bert-base-uncased/vocab.txt"
      }
    }
  },
  "train_data_path": "/home/yzhao/data/Tweets_train.csv",
  "validation_data_path": "/home/yzhao/data/Tweets_test.csv",
  "model": {
    "type": "text_classifier_fscore_focal_loss",
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": [
          "bert",
          "bert-offsets"
        ]
      },
      "token_embedders": {
        "bert": {
          "type": "bert-pretrained",
          "pretrained_model": "/home/yzhao/data/bert/bert-base-uncased/bert-base-uncased.tar.gz",
          "top_layer_only": true,
          "requires_grad": false
        }
      }
    },
    "seq2vec_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 768,
      "hidden_size": 200,
      "num_layers": 1,
      "dropout": 0.2
    },
    "dropout": 0.2
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ],
    "batch_size": 32
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "validation_metric": "+accuracy",
    "num_serialized_models_to_keep": 1,
    "num_epochs": 15,
    "grad_norm": 10.0,
    "patience": 5,
    "cuda_device": 7
  }
}
{
  "dataset_reader": {
    "type": "text_classification_csv",
    "token_indexers": {
      "tokens": {
        "type": "single_id"
      }
    },
    "max_sequence_length": 100
  },
  "train_data_path": "/home/yzhao/data/Tweets_train.csv",
  "validation_data_path": "/home/yzhao/data/Tweets_test.csv",
  "model": {
    "type": "text_classifier_fscore_focal_loss",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 200,
          "trainable": true
        }
      }
    },
    "seq2vec_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 200,
      "num_layers": 1,
      "dropout": 0.2
    },
    "dropout": 0.2
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["tokens", "num_tokens"]],
    "batch_size": 40
  },
  "trainer": {
    "num_epochs": 15,
    "grad_norm": 5.0,
    "patience": 4,
    "shuffle": true,
    "validation_metric": "+accuracy",
    "cuda_device": 2,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.9],
      "eps": 1e-07,
      "lr": 0.001
    }
  }
}